{
	"name": "webview-rpc",
	"workspaces": [
		"packages/*"
	],
	"private": true,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"main": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/QiyuanChen02/webview-rpc.git"
	},
	"scripts": {
		"build": "yarn workspace @webview-rpc/shared build && yarn workspace @webview-rpc/client build && yarn workspace @webview-rpc/host build && yarn workspace @webview-rpc/react-query build",
		"release": "yarn workspaces foreach -A --no-private npm publish --tolerate-republish",
		"version:patch": "yarn workspaces foreach -A --no-private run increment-version",
		"format": "npx @biomejs/biome format --write packages"
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=18"
	},
	"author": "Qiyuan Chen",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@types/node": "^24.6.2",
		"@types/vscode": "^1.104.0",
		"tsdown": "^0.15.9",
		"typescript": "^5.9.3"
	},
	"packageManager": "yarn@3.8.7"
}
