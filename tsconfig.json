{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"rootDir": "packages",
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"stripInternal": true
	},
	"include": ["packages/**/*"],
	"exclude": ["dist", "node_modules"]
}
